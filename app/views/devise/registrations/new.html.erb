<div class="contaimer">
  <div class="row">
    <div class="col-lg-6 landing-left">
    <%= render 'devise/shared/dummy_phone' %>
    </div>
    <div class="col-lg-6 landing-right text-center d-flex align-items-center">
      <div>
        <div class="form-login box">
          <%= image_tag "ecarta4.jpg", height: '75', width: '250', class: "logo-img mb-4 mr-3" %>
        <!-- <h2 class="core-sprite logo-img"><i class="fas fa-caravan"></i><i class="fas fa-shuttle-van"></i></h2> -->
        <h5 class="light-color"><strong>Sign up to meet your frends, <br> share videos and photos</strong></h5>

        <hr>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "shared/devise_msg", resource: resource %>

          <div class="form-group">
            <%= f.text_field :name, autofocus: true, autocomplete: "username", placeholder: "Username", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control" %>
          </div>

          <div class="form-group">
            <% if @minimum_password_length %>
            <em><small>(<%= @minimum_password_length %> characters minimum)</small></em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm password", class: "form-control" %>
          </div>

          <div class="actions">
            <%= f.submit "Sign up", clas: "button" %>
          </div>
        <% end %>

        <br>

        <p class="light-color">By signing up, you agree to our <br><strong>Term &amp; Privacy Policy.</strong></p>

        </div>
        <div class="redirect-link box">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
